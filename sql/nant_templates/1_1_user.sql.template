CREATE LOGIN [@INITIAL_CATALOG@] WITH PASSWORD = N'@PASS@', DEFAULT_DATABASE=[@INITIAL_CATALOG@], CHECK_EXPIRATION=OFF, CHECK_POLICY=OFF
GO

USE @INITIAL_CATALOG@
GO

IF NOT EXISTS (SELECT * FROM sys.database_principals WHERE name = N'@INITIAL_CATALOG@')
BEGIN
    CREATE USER [@INITIAL_CATALOG@] FOR LOGIN [@INITIAL_CATALOG@] WITH DEFAULT_SCHEMA=[dbo];
    EXEC sp_addrolemember N'db_owner', N'@INITIAL_CATALOG@'
END
GO